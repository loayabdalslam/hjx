component Card

state:
  title = "Card Title"
  description = "Card Description"
  content = "Card Content"
  footer = ""

layout:
  view.rounded-xl.border.bg-card.text-card-foreground.shadow:
    view.flex.flex-col.space-y-1.5.p-6:
      view.font-semibold.leading-none.tracking-tight: "{{title}}"
      view.text-sm.text-muted-foreground: "{{description}}"
    view.p-6.pt-0:
      slot
    view.flex.items-center.p-6.pt-0: "{{footer}}"
